---
import { menuLinks } from "@/site-config";
import ThemeToggle from "../ThemeToggle.astro";
import Logo from "../Logo.astro";

function isCurrentPage(url: string) {
	return Astro.url.pathname.replace(/(\/.*?)\/$/, "$1") === url;
}
---

<div class="container">
	<header id="main-header" class="main-header">
		<a
			class="logo"
			href={isCurrentPage("/") ? "#" : "/"}
			aria-current={isCurrentPage("/") ? "page" : undefined}
		>
			<span class="sr-only">Alexandru Bereghici</span>
			<Logo />
		</a>
		<nav aria-label="Main" class="mobile-nav">
			<ThemeToggle />
			<details class="mobile-nav__menu">
				<summary class="mobile-nav__toggle">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						stroke-width="2"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="mobile-nav__close-icon"
					>
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<path d="M18 6l-12 12"></path>
						<path d="M6 6l12 12"></path>
					</svg>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						stroke-width="2"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="mobile-nav__open-icon"
					>
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<path d="M4 8l16 0"></path>
						<path d="M4 16l16 0"></path>
					</svg>
				</summary>
				<div class="mobile-nav__menu">
					<ul role="list" class="mobile-nav__menu-list">
						{
							menuLinks.map((link) => (
								<li>
									<a
										class="mobile-nav__menu-link"
										aria-current={isCurrentPage(link.path) ? "page" : undefined}
										data-astro-prefetch
										href={link.path}
									>
										<span>{link.title}</span>
										<svg
											xmlns="http://www.w3.org/2000/svg"
											class="text-subtle transition"
											width="20"
											height="20"
											viewBox="0 0 24 24"
											stroke-width="2"
											stroke="currentColor"
											fill="none"
											stroke-linecap="round"
											stroke-linejoin="round"
										>
											<path stroke="none" d="M0 0h24v24H0z" fill="none" />
											<path d="M9 6l6 6l-6 6" />
										</svg>
									</a>
								</li>
							))
						}
					</ul>
				</div>
			</details>
		</nav>
		<nav aria-label="Main" class="desktop-nav">
			<ul role="list" class="desktop-nav__menu">
				{
					menuLinks.map((link) => (
						<li>
							<a
								class="desktop-nav__menu-link"
								aria-current={isCurrentPage(link.path) ? "page" : undefined}
								data-astro-prefetch
								href={link.path}
							>
								{link.title}
							</a>
						</li>
					))
				}
				<ThemeToggle />
			</ul>
		</nav>
	</header>
</div>

<style>
	.main-header {
		display: flex;
		justify-items: center;
		align-items: center;
		gap: var(--spacing-04);
		padding: var(--spacing-03) 0;
	}

	.logo {
		width: 40px;
		display: block;
		flex-shrink: 0;
		border-radius: var(--radius-01);
		margin-inline-end: auto;
	}

	.desktop-nav {
		.desktop-nav__menu {
			display: flex;
			align-items: center;
			gap: var(--spacing-03);
			list-style: none;
		}

		.desktop-nav__menu-link {
			padding: var(--spacing-01) var(--spacing-03);
			color: var(--text-primary);
			border-radius: var(--radius-03);
			font: normal var(--font-weight-06) var(--font-size-02) / var(--font-line-height-02)
				var(--font-sans);
			text-decoration: none;

			&:hover,
			&:focus-visible {
				background: var(--menu-link-background);
			}

			@media (prefers-reduced-motion: no-preference) {
				transition:
					background,
					outline-offset 150ms ease;
			}
		}

		@media (--mobile) {
			display: none;
		}
	}

	.mobile-nav {
		display: flex;
		align-items: center;

		.mobile-nav__menu {
			position: relative;

			.mobile-nav__toggle {
				--size: 2rem;
				display: flex;
				justify-content: center;
				align-items: center;
				cursor: pointer;
				border-radius: var(--radius-02);
				width: var(--size);
				height: var(--size);

				&:hover,
				&:focus-visible {
					background: var(--menu-link-background);
				}

				@media (prefers-reduced-motion: no-preference) {
					transition:
						background,
						outline-offset 150ms ease;
				}
			}

			&[open] {
				.mobile-nav__open-icon {
					display: none;
				}

				.mobile-nav__close-icon {
					display: block;
				}
			}

			&:not([open]) {
				.mobile-nav__open-icon {
					display: block;
				}

				.mobile-nav__close-icon {
					display: none;
				}
			}

			.mobile-nav__menu {
				width: 16rem;
				position: absolute;
				background: var(--background-secondary);
				padding: var(--spacing-03);
				right: var(--spacing-01);
				top: var(--spacing-06);
				border-radius: var(--radius-05);
				border: 1px solid var(--divider-secondary);

				.mobile-nav__menu-list {
					list-style: none;
					margin: 0;
					padding: 0;
					display: flex;
					flex-flow: column;
					gap: var(--spacing-03);
				}

				.mobile-nav__menu-link {
					display: flex;
					justify-content: space-between;
					padding: var(--spacing-02) var(--spacing-03);
					color: var(--text-primary);
					border-radius: var(--radius-01);
					font: normal var(--font-weight-06) var(--font-size-02) / var(--font-line-height-02)
						var(--font-sans);
					text-decoration: none;

					&:hover,
					&:focus-visible {
						background: var(--menu-link-background);
					}

					@media (prefers-reduced-motion: no-preference) {
						transition:
							background,
							outline-offset 150ms ease;
					}
				}
			}
		}
		@media (--tablet) {
			display: none;
		}
	}
</style>
