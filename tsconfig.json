{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/assets/*": ["src/assets/*"],
			"@/components/*": ["src/components/*"],
			"@/data/*": ["src/data/*"],
			"@/layouts/*": ["src/layouts/*"],
			"@/utils/*": ["src/utils/*"],
			"@/styles/*": ["src/styles/*"],
			"@/types": ["src/types.ts"],
			"@/site-config": ["src/site.config.ts"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", "dist"]
}
