{
	"name": "abereghici.github.io",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"astro": "astro",
		"build": "astro build",
		"check": "astro check",
		"dev": "astro dev",
		"format": "npm run format:code && npm run format:imports",
		"format:code": "biome format . --write && prettier -w \"**/*\" \"!**/*.{md,mdx}\" --ignore-unknown --cache",
		"format:imports": "biome check --formatter-enabled=false --write",
		"lint": "biome lint .",
		"preview": "astro preview"
	},
	"dependencies": {
		"@astrojs/mdx": "^4.0.8",
		"@astrojs/sitemap": "^3.2.1",
		"@biomejs/biome": "^1.9.4",
		"astro": "^5.2.5",
		"astro-icon": "^1.1.5",
		"astro-robots-txt": "^1.0.0",
		"astro-webmanifest": "^1.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-astro": "^0.14.1"
	}
}
